<%# UI — Chat-like panel inspired by the provided design %>
<% user = @users.first || User.first %>
<% has_google = user && Credential.exists?(user_id: user.id, provider: "google") %>

<div class="mx-auto max-w-xl">
  <div class="bg-white rounded-2xl shadow border overflow-hidden">
    <!-- Header -->
    <div class="px-5 pt-5 pb-3 flex items-start justify-between">
      <div>
        <h1 class="text-2xl font-semibold tracking-tight">Ask Anything</h1>
      </div>
      <button class="text-gray-400 hover:text-gray-600" title="Close">
        <!-- X icon -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>

    <!-- Tabs & New thread -->
    <div class="px-5 flex items-center gap-4 text-sm">
      <div class="flex items-center gap-2">
        <span class="px-3 py-1 rounded-xl bg-gray-100 font-medium">Chat</span>
        <a class="text-gray-500 hover:text-gray-700" href="#">History</a>
      </div>
      <div class="ml-auto flex items-center gap-2 text-gray-800 hover:text-gray-900">
        <span class="inline-flex items-center gap-1 font-medium">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor"><path d="M11 11V5h2v6h6v2h-6v6h-2v-6H5v-2z"/></svg>
          New thread
        </span>
      </div>
    </div>

    <!-- Divider -->
    <div class="mt-3 border-t"></div>

    <!-- Context & connection badge -->
    <div class="px-5 py-3 text-center text-sm text-gray-600">
      <div class="flex items-center justify-center gap-2">
        <span class="select-none">Context set to all meetings</span>
      </div>
      <div class="text-xs text-gray-400 mt-1"><%= Time.current.strftime("%l:%M%P — %b %e, %Y").strip %></div>
      <div class="mt-2">
        <% if has_google %>
          <span class="inline-flex items-center gap-1 text-emerald-700 text-xs font-medium bg-emerald-50 border border-emerald-200 px-2 py-1 rounded-full">Google connected</span>
        <% else %>
          <a href="<%= auth_google_path %>" class="inline-flex items-center gap-1 text-xs font-medium text-indigo-700 bg-indigo-50 border border-indigo-200 px-2 py-1 rounded-full">Connect Google</a>
        <% end %>
      </div>
    </div>

    <!-- Conversation area -->
    <div class="px-5 pb-6 space-y-6">
      <!-- Suggestion chip -->
      <div class="flex justify-start">
        <div class="rounded-2xl bg-gray-50 border px-4 py-3 text-gray-800 text-[15px] max-w-[540px]">
          <div class="mb-2 font-medium">Find meetings I’ve had with</div>
          <div class="flex flex-wrap items-center gap-2 text-sm">
            <span class="inline-flex items-center gap-2 bg-white border rounded-full pr-3 pl-1 py-1">
              <span class="inline-flex h-6 w-6 rounded-full bg-gray-200"></span>
              Bill
            </span>
            and
            <span class="inline-flex items-center gap-2 bg-white border rounded-full pr-3 pl-1 py-1">
              <span class="inline-flex h-6 w-6 rounded-full bg-gray-200"></span>
              Tim
            </span>
            this month
          </div>
        </div>
      </div>

      <!-- Assistant message placeholder -->
      <div class="text-[15px] leading-6 text-gray-800">
        Sure, here are some recent meetings that you, Bill, and Tim all attended. I found a few in your calendar. ✨
      </div>

      <!-- Dynamic nearest results rendered here -->
      <turbo-frame id="nearest_results">
        <div class="text-sm text-gray-500">Type a question below to search your emails and events.</div>
      </turbo-frame>

      <div class="text-[15px] leading-6 text-gray-800">
        I can summarize these meetings, schedule a follow up, and more!
      </div>
    </div>

    <!-- Input area -->
    <div class="px-5 pb-5">
      <form action="/embeddings/nearest" method="post" data-turbo-frame="nearest_results">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <% if user %>
          <input type="hidden" name="user_id" value="<%= user.id %>">
        <% end %>
        <% if ENV["API_TOKEN"].present? %>
          <input type="hidden" name="api_token" value="<%= ENV["API_TOKEN"] %>">
        <% end %>
        <div class="rounded-2xl border bg-white">
          <textarea name="query_text" rows="3" class="w-full resize-y rounded-2xl p-4 focus:outline-none" placeholder="Ask anything about your meetings..."></textarea>
          <div class="flex items-center gap-2 px-3 py-2 border-t text-sm">
            <!-- left controls -->
            <button type="button" class="h-8 w-8 inline-flex items-center justify-center rounded-full border hover:bg-gray-50" title="Add">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor"><path d="M11 11V5h2v6h6v2h-6v6h-2v-6H5v-2z"/></svg>
            </button>

            <select name="filter_kind" class="ml-1 border rounded-full px-3 py-1 text-gray-700">
              <option value="">All</option>
              <option value="event">Events</option>
              <option value="email">Emails</option>
            </select>

            <div class="ml-auto flex items-center gap-2">
              <button type="submit" class="inline-flex items-center gap-1 bg-indigo-600 text-white px-3 py-1.5 rounded-full">
                Ask
              </button>
              <button type="button" class="h-8 w-8 inline-flex items-center justify-center rounded-full border hover:bg-gray-50" title="Voice">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v10m0 0a3 3 0 01-3-3V7a3 3 0 116 0v3a3 3 0 01-3 3zm0 0v4m-4 0h8"/></svg>
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
